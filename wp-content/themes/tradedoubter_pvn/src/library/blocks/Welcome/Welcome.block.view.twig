<div class="b-Welcome">
	<div class="b-Welcome__title">
		<div class="b-Welcome__title-text">
			<div class="b-Welcome__title-text-small">{{fields.title.smalltext}}</div>
			<div class="b-Welcome__title-text-big">{{fields.title.bigtext}}</div>
			{% if fields.title.button %}
				<a class="b-Welcome__title-text-button" id="feature0" href="#Tofeature">{{fields.title.button}}</a>
			{% endif %}
		</div>
		<div class="b-Welcome__title-image">
			{% if fields.title.image %}
				<img class="b-Welcome__title-image" src="{{fields.title.image}}" alt="laptop">
			{% endif %}
		</div>
	</div>

	<div class="b-Welcome__program">
		<div class="b-Welcome__program-square"></div>
		<div class="b-Welcome__program-image">
			{% if fields.dashboard_program %}
				<img class="b-Welcome__program-image" src="{{fields.dashboard_program}}" alt="Dashboard">
			{% endif %}
		</div>
		<div class="b-Welcome__program-square b-Welcome__program-square--big"></div>
	</div>

	<img class="b-Welcome__image" src="{{theme.link}}/static/img/WAVE-white.svg" alt="WAVE-white">

	{% if fields.whatwedo %}
		<div class="b-Welcome__whatWeDo">
			<div class="b-Welcome__whatWeDo-big-text">{{fields.whatwedo.bigtext}}</div>
			<div class="b-Welcome__whatWeDo-small-text">{{fields.whatwedo.smalltext}}</div>
		</div>
	{% endif %}
</div>
